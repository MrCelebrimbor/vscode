\newcommand*{\javaprompt}{\textcolor{promptcolour}{{>}{>}{>}}}

%段落样式
\lstdefinestyle{myjava}{
language=java,
showtabs=true,
tab=,
tabsize=2,
basicstyle=\ttfamily\footnotesize,
stringstyle=\color{stringcolour},
showstringspaces=false,
alsoletter={1234567890},
otherkeywords={\%, \}, \{, \&, \|},
keywordstyle=\color{keywordcolour}\bfseries,
emph={ boolean,byte,char, double, float,int,long,new,short,void,instanceof},
emphstyle=\color{blue}\bfseries,
emph={[2]True, False, None},
emphstyle=[2]\color{keywordcolour},
emph={[3]break,case, catch, continue, default ,do, else, for, if,return,switch,try, while, finally, throw,this, super},
emphstyle=[3]\color{commandcolour},
emph={abstract,final,native,private, protected,public,static,synchronized,transient, volatile},
emphstyle=\color{exceptioncolour}\bfseries,
morecomment=[s]{"""}{"""},
commentstyle=\color{commentcolour}\slshape,
emph={[4]class, extends, implements,interface, package,import,throws},
emphstyle=[4]\color{numpycolour},
emph={[5]goto,const,null},
emphstyle=[5]\color{specmethodcolour},
emph={[6]assert,yield},
emphstyle=[6]\color{keywordcolour}\bfseries,
emph={[7]range},
emphstyle={[7]\color{keywordcolour}\bfseries},
literate=*
{:}{{\literatecolour:}}{1}
{=}{{\literatecolour=}}{1}
{-}{{\literatecolour-}}{1}
{+}{{\literatecolour+}}{1}
{*}{{\literatecolour*}}{1}
{**}{{\literatecolour{**}}}2
{/}{{\literatecolour/}}{1}
{//}{{\literatecolour{//}}}2
{!}{{\literatecolour!}}{1}
{[}{{\literatecolour[}}{1}
{]}{{\literatecolour]}}{1}
{<}{{\literatecolour<}}{1}
{>}{{\literatecolour>}}{1}
{>>>}{\javaprompt}{3},
frame=trbl,
rulecolor=\color{black!40},
backgroundcolor=\color{white},
breakindent=.5\textwidth,frame=single,breaklines=true
}
\newcommand*{\inputjava}[3]{\lstinputlisting[firstline=#2,lastline=#3,firstnumber=#2,frame=single,breakindent=.5\textwidth,frame=single,breaklines=true,style=myjava]{#1}}


